<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-left">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("NUCode", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <div class="top">
			     <ul class="nav navbar-nav">
			         <li>@Html.ActionLink("Home", "Index", "Home")</li>
			         <li>@Html.ActionLink("About", "About", "Home")</li>
			         <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
			         @if (User.Identity.IsAuthenticated)
				    {
			             <li>@Html.ActionLink("Task List", "TaskList", "Task")</li>
			             <li>@Html.ActionLink("Archive List", "ArchivedTask", "Task")</li>
			             <li>@Html.ActionLink("Add Task", "AddTask", "Task")</li>
				    }
			         @if (User.IsInRole("Admin"))
				    {
			             <li>@Html.ActionLink("View Users", "ManageAdminAccounts", "Manage")</li>
				    }
			     </ul>
                </div>
                <div class="bottom">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="page-content">
        <div id="headerDiv">
            <header>@ViewBag.Title</header>
        </div>
        <div class="backbody">
            <div class="backbody2">
                <div class="container body-content">
                    @RenderBody()
                </div>
            </div>
        </div>
        <footer>
            <p>&copy; @DateTime.Now.Year - NUCode</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
