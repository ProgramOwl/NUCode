@model TaskService.Models.TaskModel

@{
    ViewBag.Title = "EditTask";
    Model.TaskId = ViewBag.ID;
}

<h2>EditTask</h2>

<div class="panel panel-success">
    <div class="panel-heading text-center"><h4>Edit A Task</h4></div>
    <div class="panel-body">
        @using (Html.BeginForm())
	   {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>New Task Name</label>
                @Html.TextBoxFor(x => x.Name, new { @Value = Model.Name, @class = "form-control" })
            </div>
            <div class="form-group">
                <label>New Description</label>
                @Html.TextAreaFor(x => x.Description, new { @Value = Model.Description, @class = "form-control" })
            </div>
                <div class="form-group">
                    <label>New Tag 1</label>
                    @Html.TextBoxFor(x => x.Tags[0], new { @Value = Model.Tags[0], @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>New Tag 2</label>
                    @Html.TextBoxFor(x => x.Tags[1], new { @Value = Model.Tags[1], @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>New Tag 3</label>
                    @Html.TextBoxFor(x => x.Tags[2], new { @Value = Model.Tags[2], @class = "form-control" })
                </div>
                <hr />
                <div class="text-center">
                    <input class="btn btn-success" type="submit" value="Submit" />
                </div>
	   }
    </div>
</div>